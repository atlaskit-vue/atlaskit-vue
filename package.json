{
  "name": "atlaskit-vue",
  "version": "0.0.0",
  "description": "Atlaskit Vue is a UI library, built according to the Atlassian Design Guidelines for Vue.js",
  "main": "index.js",
  "repository": "https://github.com/atlaskit-vue/atlaskit-vue",
  "license": "MIT",
  "contributors": [
    {
      "name": "Evan Nguyen",
      "url": "https://github.com/dacsang97"
    },
    {
      "name": "Hieu Hani",
      "url": "https://github.com/hieuhani"
    }
  ],
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "scripts": {
    "dev": "lerna run --parallel dev",
    "build:ui": "lerna run build --stream --scope=@atlaskit-vue/ui",
    "build:website": "lerna run build --stream --scope=@atlaskit-vue/website",
    "build": "yarn build:ui && yarn build:website"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@vue/cli-plugin-babel": "^3.9.2",
    "@vue/cli-service": "^3.9.3",
    "autoprefixer": "^9.6.1",
    "husky": "^3.0.0",
    "lerna": "^3.15.0",
    "postcss-cli": "^6.1.3",
    "postcss-preset-env": "^6.7.0",
    "rollup": "^1.17.0",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-css-only": "^1.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-stylus-compiler": "^1.0.1",
    "rollup-plugin-vue": "^5.0.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vue": "^2.6.10",
    "vue-template-compiler": "^2.6.10"
  }
}
